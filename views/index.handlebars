<div id = "container">
    <img src="assets/img/burger.png" alt="burger graphic">

    <h1>Eat-Da-Burger!</h1>

    <div id = "not_devoured">
        <ul>
            {{#each burgers}}
                {{#unless devoured}}
                    {{> burgers/burger-block devoured=true}}
                {{/unless}}
            {{/each}}
        </ul>
    </div>

    <div id="devoured">
        <ul>
            {{#each burgers}}
                {{#if devoured}}
                    {{> burgers/burger-block devoured=false}}
                {{/if}}
            {{/each}}
        </ul>
    </div>

    <form class="create-form">

        <div class="form-group">
            <input type="text" id="burger" name="name">
        </div>

        <button type="submit">Submit</button>
        <div>
            Enter a burger you want to eat and click the "Submit" button.
        </div>
    </form>

</div>